{
  "name": "pr-bot",
  "version": "0.1.0",
  "author": "Vitalii Petriv",
  "private": true,
  "type": "module",
  "bin": {
    "pr-bot": "dist/index.js"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsup --config tsup.config.ts",
    "prepare": "pnpm build",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "semver": "^7.7.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsup": "^8.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}